function QuizQuestion () {
    this.question,
    this.image,
    this.input1,
    this.input2,
    this.input3,
    this.correctAnswer,
    this.difficultylabel,
    this.explanation
}

QuizQuestion.prototype.checkAnswer = function () {
    document.getElementById("checkbtn").addEventListener("click", function () {
        if(document.getElementsByTagName(form).checked.innerHTML = this.correctAnswer) {
            alert ("You did it! :)");
            alert (this.explanation);
            pointsScored +=1 ; 
            return true;
        } else if (document.getElementsByTagName(form).checked.innerHTML != this.correctAnswer) {
            alert ("Well wrong answer! Let's try again on the next question");
            alert (this.explanation);
            return false;
        } else {
            alert ("You must select at least one answer");
            return false;
        }
    })
}


QuizQuestion.prototype.checkDifficulty = function () {
    document.getElementById("checkbtn").addEventListener("click", function () {
        if(document.getElementsByTagName(form).checked.innerHTML = this.correctAnswer) {
            alert ("You did it! :)");
            alert (this.explanation);
            pointsScored +=1 ; 
            return true;
        } else if (document.getElementsByTagName(form).checked.innerHTML != this.correctAnswer) {
            alert ("Well wrong answer! Let's try again on the next question");
            alert (this.explanation);
            return false;
        }
    })
}

